<h1> <%= @task.title %> </h1>
<p> <%= @task.details %> </p>

<ul>
<li> "This task is not completed yet"</li>
</ul>

<button type="button" class="btn btn-outline-primary" ><i class="fa-solid fa-pen-to-square"></i> <%= link_to "Edit this task", edit_path %> </button>
<p> <%= link_to "Back to your list!", tasks_path %> </p>

<button type="button" class="btn btn-outline-danger"><i class="fa-solid fa-trash-can"></i> <%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%> </button>
